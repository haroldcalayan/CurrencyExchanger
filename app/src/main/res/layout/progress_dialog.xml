<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/size_13dp">

    <ProgressBar
        android:id="@+id/imvProgressDialogIcon"
        android:layout_width="@dimen/size_36dp"
        android:layout_height="@dimen/size_36dp"
        android:layout_marginTop="@dimen/size_30dp"
        android:layout_marginBottom="@dimen/size_10dp" />

    <TextView
        android:id="@+id/txvProgressDialogText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/size_30dp"
        android:layout_marginTop="@dimen/size_7dp"
        android:layout_marginBottom="@dimen/size_7dp"
        android:text="@string/textview_loading"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="@dimen/size_16sp"
        android:textStyle="bold" />

</LinearLayout>